<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background= "@color/bg_dialog"
    >

    <ImageButton
        android:id="@+id/dialog_mark_close"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_close"
        android:layout_alignParentEnd="true"
        android:scaleType="fitCenter"
        android:background="@null"/>

    <Button
        android:id="@+id/dialog_mark_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_check"
        android:drawablePadding="12dp"
        android:textSize="23sp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/btn_mark_completed_bg_color"
        android:layout_below="@id/dialog_mark_close"
        android:layout_centerInParent="true"
        android:text="@string/mark_completed"/>



</RelativeLayout>